{
  "name": "RediTeam",
  "version": "0.0.1",
  "main": "server.js",
  "scripts": {
    "start": "npm run server-prod",
    "client": "cd client && npm run start",
    "server-dev": "nodemon --max-old-space-size=4096 server.js",
    "server-prod": "set NODE_ENV=production&& node server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server-dev\" \"npm run client\"",
    "build": "npm install && cd client && npm install && npm run build"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "connect-redis": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.10.0",
    "ioredis": "^4.22.0",
    "node-fetch": "^2.6.1",
    "concurrently": "^6.0.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "concurrently": "^6.0.2"
  }
}
